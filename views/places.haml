- content_for(:title) { "Places | Brett Huneycutt"}
- content_for(:description) { "Places I have lived or visited for at least one night, plotted on a Google map."}
- content_for :head do
  %meta{name: 'viewport', content: 'initial-scale=1.0, user-scalable=no'}
  %script{type: 'text/javascript', src: "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAPS_API_KEY']}&sensor=false"}
  :javascript
    function initialize() {
      var mapOptions = {
        center: new google.maps.LatLng(20, 0),
        zoom: 3
      };

      var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);

      #{partial :place, collection: @places}
    }
    google.maps.event.addDomListener(window, 'load', initialize);

#map-canvas

